<%= form_for ([@article, @article.comments.build]) do |f| %>

	<% if not(logged_in?) %>
		<p>
			<%= f.label :name %><br>
			<%= f.text_field :name %>
		</p>
	<% else %>
		<p>
			<%= f.label :name %><br>
			<%= f.text_field :name, disabled: true, value: current_user.name %>
		</p>
	<% end %>

	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>