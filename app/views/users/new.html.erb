<% provide(:title, 'Sign Up') %>

<div>
<div>
<h1> Sign Up </h1>
</div>

<div>
	<div>
		<%= form_for(@user) do |f| %>

		<div>
			<%= render 'shared/user_error_messages' %>
		</div>

		<div>
			<%= f.label :name %>
			<%= f.text_field :name %>
		</div>

		<div>
			<%= f.label :email %>
			<%= f.email_field :email %>
		</div>

		<div>
			<%= f.label :password %>
			<%= f.password_field :password %>
		</div>

		<div>
			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation %>
		</div>

		<div>
			<%= f.submit "Create My Account" %>
		</div>

		<% end %>
	</div>
</div>
</div>


