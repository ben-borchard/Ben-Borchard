



<%= form_for @event, url: events_path do |e| %>
<p>
	<%= e.label :start_time %>
	<br></br>
	<%= e.datetime_select :start_time %>
	<p>
		<%= @event.start_time %>
	</p>
</p>

<p>
	<%= e.label :end_time %>
	<br></br>
	<%= e.datetime_select :end_time %>
</p>

<p>
	<%= e.label :name %>
	<br></br>
	<%= e.text_field :name %>
</p>

<p>
	<%= e.label :comment %>
	<br></br>
	<%= e.text_area :comment, :class => "comment" %>
</p>

<p>
	<%= e.submit %>
</p>
<% end %>	